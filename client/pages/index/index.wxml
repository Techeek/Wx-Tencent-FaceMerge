<!-- index.wxml -->
<view class="image-view">
  <swiper
    class="image-list"
    indicator-dots="{{ true }}"
    indicator-color="rgba(0,128,200,0.25)"
    indicator-active-color="#00a4ff"
    autoplay="{{ false }}"
    circular="{{ true }}"
    current="{{ current }}"
    bindchange="switchMaterial">
    <swiper-item
      wx:for="{{ materials }}"
      wx:key="{{ item.materialId }}">
      <image
        src="{{ result[item.materialId] || item.materialSrc }}"
        mode="aspectFit" />
    </swiper-item>
  </swiper>
</view>

<view class="button-view">
  <button bindtap="choose">{{ buttonText }}</button>
</view>

<view class="text-view">
  <text>腾讯云AI团队提供技术支持</text>
</view>
